<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalsTab">

    <!-- TODO: Update blank fragment layout -->


    <RadioGroup
        android:id="@+id/timeButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/week_trend_but"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/trends_week" />

        <RadioButton
            android:id="@+id/month_trend_but"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/trends_month"/>

        <RadioButton
            android:id="@+id/all_trend_but"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/trends_all_time"/>
    </RadioGroup>

    <Button
        android:id="@+id/trends_tips"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="?" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="123dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/week_circles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/week_one_balls" />

            <Spinner
                android:id="@+id/trend_graph_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Select Trend"></Spinner>

            <ImageView
                android:id="@+id/week_mood_time_graph"
                android:layout_width="wrap_content"
                android:layout_height="268dp"
                android:layout_below="@+id/week_circles"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/week_mood_time" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/week_mood_time_graph"
                android:text="Tips:\nMood increases with the number of calories consumed. Reaching calorie goals may lead to better mood."/>


        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
